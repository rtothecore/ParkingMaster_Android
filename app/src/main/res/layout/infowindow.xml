<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/pkName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일도이동 공영주차장"
                android:textColor="#ffffff"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="180dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@android:color/transparent"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/MapWeatherBg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:maxHeight="0dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/map_weatherinfo_bg" />

                    <TextView
                        android:id="@+id/wt_title2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="날씨정보 : --"
                        android:textColor="#ffffff" />

                    <TextView
                        android:id="@+id/wt_loc2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/wt_title2"
                        android:text="----"
                        android:textColor="#097FDA"
                        android:textStyle="bold"
                        android:textSize="22dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp" />

                    <ImageView
                        android:id="@+id/wt_pic2"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_below="@id/wt_loc2"
                        app:srcCompat="@mipmap/ic_launcher"
                        android:layout_marginLeft="10dp" />

                    <TextView
                        android:id="@+id/wt_tp2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/wt_loc2"
                        android:layout_toRightOf="@id/wt_pic2"
                        android:text="--℃"
                        android:textColor="#097FDA"
                        android:textStyle="bold"
                        android:textSize="22dp" />

                    <TextView
                        android:id="@+id/wt_ac2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/wt_pic2"
                        android:text="----"
                        android:textColor="#097FDA"
                        android:layout_marginLeft="10dp" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@android:color/transparent"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/MapAirBg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:maxHeight="0dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/map_airinfo_bg" />

                    <TextView
                        android:id="@+id/air_title2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="대기정보"
                        android:textColor="#ffffff"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/air_loc2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/air_title2"
                        android:text="---"
                        android:textColor="#097FDA"
                        android:textStyle="bold"
                        android:textSize="22dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp" />

                    <TextView
                        android:id="@+id/air_pm102"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/air_loc2"
                        android:text="미세먼지 : --㎍/㎥"
                        android:textColor="#097FDA"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="20dp" />

                    <TextView
                        android:id="@+id/air_pm252"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/air_pm102"
                        android:text="초미세먼지 : --㎍/㎥"
                        android:textColor="#097FDA"
                        android:layout_marginLeft="35dp" />

                    <TextView
                        android:id="@+id/air_o32"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/air_pm252"
                        android:text="오존지수 : ----ppm"
                        android:textColor="#097FDA"
                        android:layout_marginLeft="35dp" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@android:color/transparent"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/realTimeBg"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:adjustViewBounds="true"
                    android:maxHeight="0dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/realtime_parking_info_bg" />

                <TextView
                    android:id="@+id/real_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="실시간 주차잔여대수"
                    android:textStyle="bold"
                    android:textColor="#ffffff" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/real_gnrl_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/real_title"
                        android:layout_marginTop="8dp"
                        android:text="일반:"
                        android:textColor="#097FDA" />
                    <TextView
                        android:id="@+id/real_gnrl_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/real_title"
                        android:layout_toRightOf="@id/real_gnrl_title"
                        android:layout_marginTop="8dp"
                        android:text="--"
                        android:textColor="#FFA820"/>

                    <TextView
                        android:id="@+id/real_hndc_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/real_title"
                        android:layout_toRightOf="@id/real_gnrl_data"
                        android:layout_marginTop="8dp"
                        android:text="장애:"
                        android:textColor="#097FDA" />
                    <TextView
                        android:id="@+id/real_hndc_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/real_title"
                        android:layout_toRightOf="@id/real_hndc_title"
                        android:layout_marginTop="8dp"
                        android:text="--"
                        android:textColor="#FFA820" />

                    <TextView
                        android:id="@+id/real_wmon_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/real_title"
                        android:layout_toRightOf="@id/real_hndc_data"
                        android:layout_marginTop="8dp"
                        android:text="여성:"
                        android:textColor="#097FDA" />
                    <TextView
                        android:id="@+id/real_wmon_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/real_title"
                        android:layout_toRightOf="@id/real_wmon_title"
                        android:layout_marginTop="8dp"
                        android:text="--"
                        android:textColor="#FFA820" />

                    <TextView
                        android:id="@+id/real_lgvh_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/real_title"
                        android:layout_toRightOf="@id/real_wmon_data"
                        android:layout_marginTop="8dp"
                        android:text="경차:"
                        android:textColor="#097FDA" />
                    <TextView
                        android:id="@+id/real_lgvh_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/real_title"
                        android:layout_toRightOf="@id/real_lgvh_title"
                        android:layout_marginTop="8dp"
                        android:text="--"
                        android:textColor="#FFA820" />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@android:color/transparent"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/festInfoBg"
                    android:layout_width="match_parent"
                    android:layout_height="83dp"
                    android:adjustViewBounds="true"
                    android:maxHeight="0dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/festival_info_bg" />

                <TextView
                    android:id="@+id/festList1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="한라산 청정 고사리축제"
                    android:textColor="#097FDA" />

                <TextView
                    android:id="@+id/festList2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/festList1"
                    android:layout_centerHorizontal="true"
                    android:text="제36회 제주유채꽃축제"
                    android:textColor="#097FDA" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@android:color/transparent"
                android:padding="5dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_measure"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:background="@drawable/guess_butten_n" />

                <Button
                    android:id="@+id/btn_favorites"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@id/btn_measure"
                    android:background="@drawable/favorites_butten_n" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>